# Flask secret key (must be overridden in production)
FLASK_SECRET_KEY=change-this-secret

# SQLAlchemy database URL
# Example for SQLite (default):
DATABASE_URL=sqlite:///spam_classifier.db
# Example for MySQL:
# DATABASE_URL=mysql+mysqlconnector://user:password@host:3306/dbname

# Session cookie settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax

# Optional: directory containing model.pkl and vectorizer.pkl
# Defaults to project root if not set
MODEL_DIR=.

# Flask environment
FLASK_ENV=development
