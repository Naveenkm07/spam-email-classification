# Flask secret key (must be overridden in production)
FLASK_SECRET_KEY=change-this-secret

# SQLAlchemy database URL
# Example for SQLite (default):
DATABASE_URL=sqlite:///spam_classifier.db
# Example for MySQL (local/dev):
# DATABASE_URL=mysql+mysqlconnector://user:password@host:3306/dbname
# Example for MySQL when using docker-compose (host name "db"):
# DATABASE_URL=mysql+mysqlconnector://${MYSQL_USER}:${MYSQL_PASSWORD}@db:3306/${MYSQL_DATABASE}

# Session cookie settings
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=Lax

# Optional: directory containing model.pkl and vectorizer.pkl
# Defaults to project root if not set
MODEL_DIR=.

# Flask environment
FLASK_ENV=development

# MySQL container configuration (used by docker-compose.yml)
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=smc
MYSQL_USER=smc
MYSQL_PASSWORD=smc_password
